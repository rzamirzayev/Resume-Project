@model EditSkillPostDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="container">
    <form method="post" style="margin-top:100px">
        <div class="form-group">
            <label for="exampleTitle">Name</label>
            <input type="text" class="form-control" id="exampleTitle" aria-describedby="TitleHelp"  asp-for="Name">
            <span asp-validation-for="Name" class="text text-danger"></span>

        </div>
        <div class="skill-type-info">
            <label>
                Skill Level
                <select class="form-control" asp-for="SkillLevel">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </label>
            <label>
                Skill Description
                <textarea class="form-control" placeholder="" asp-for="SkillDesc"></textarea>
            </label>
        </div>
        <a class="btn btn-success" asp-action="index">Back</a>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>