@model IEnumerable<ResumeUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Bootstrap Basic Tables</h4>
                        <span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a href="../index.html"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <a href="#!">Bootstrap Table</a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <a href="#!">Basic Table</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <!-- Page-body start -->
    <div class="page-body">
        <!-- Basic table card start -->
        <div class="card">
            <div class="card-header">
                <h5>Basic Table</h5>
                <span>use class <code>table</code> inside table element</span>

            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>EmailConfirmed</th>

                                <th><a class="btn btn-success" asp-action="add">Create</a></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.UserName</td>

                                    <td>@item.Email</td>
                                    <td>@item.EmailConfirmed</td>


                                    <td><a class="btn btn-success" asp-action="edit" asp-route-id="@item.Id">Edit</a></td>
                                    <td><a class="btn btn-warning delete-button" asp-action="Remove" asp-route-id="@item.Id">Delete</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section addcss{
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section addjs{
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script>
        function removeEntity(element) {
            Swal.fire({
                title: `Silmek istediyinden eminsiz?`,
                text: "Silindikten sonra geri dönüş mümkün olmayacak!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Delete!",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    let href = element.getAttribute('href');
                    console.log(href);

                    fetch(href, {
                        method: 'post'
                    }).then(response => response.json())
                        .then(response => {
                            window.location.reload();
                        })
                        .catch(err => console.error('Fetch duzgun deyil:', err));
                }
            });
        }

        document.querySelectorAll('.delete-button').forEach(button => {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                removeEntity(this);
            });
        });
    </script>

 }
