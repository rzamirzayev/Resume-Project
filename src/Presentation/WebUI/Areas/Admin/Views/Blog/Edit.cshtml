@model EditBlogPostDto
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <form method="post" style="margin-top:100px">
        <div class="form-group">
            <label for="exampleTitle">Title</label>
            <input type="text" class="form-control" id="exampleTitle" aria-describedby="TitleHelp"  asp-for="Title">
            <span asp-validation-for="Title" class="text text-danger"></span>

        </div>
        <div class="form-group">
            <label for="exampleBody">Body</label>
            <input type="text" class="form-control" id="exampleBody"  asp-for="Body">
            <span asp-validation-for="Body" class="text text-danger"></span>

        </div>
        <div class="form-group">
            <label for="exampleImagePatg">ImagePath</label>
            <input type="text" class="form-control" id="exampleImagePath"  asp-for="ImagePath">
            <span asp-validation-for="ImagePath" class="text text-danger"></span>

        </div>

        <a class="btn btn-success" asp-action="index">Back</a>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>