@model AddPortfolioPostRequestDto
@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <form method="post" style="margin-top:100px" enctype="multipart/form-data">

        <div class="form-group">
            <label for="exampleTitle">Title</label>
            <input type="text" class="form-control" id="exampleTitle" aria-describedby="TitleHelp" placeholder="Enter Title" asp-for="Title">
            <span asp-validation-for="Title" class="text text-danger"></span>

        </div>
        <div class="form-group">
            <label for="exampleBody">Desc</label>
            <input type="text" class="form-control" id="exampleBody" placeholder="Desc" asp-for="Desc">
            <span asp-validation-for="Desc" class="text text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="ImagePath">ImagePath</label>
            <input type="file" class="form-control" id="ImagePath" placeholder="ImagePath" asp-for="ImagePath">
            <span asp-validation-for="ImagePath" class="text text-danger"></span>

        </div>
        <a class="btn btn-success" asp-action="index">Back</a>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

